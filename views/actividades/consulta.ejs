<%- include('../partials/header') %>

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="bi bi-funnel-fill text-success"></i> Consulta de Actividades por Área</h2>
        <a href="/actividades" class="btn btn-outline-secondary"><i class="bi bi-arrow-left"></i> Volver</a>
    </div>

    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <form action="/actividades/consulta" method="GET" class="d-flex gap-2 align-items-end">
                <div class="flex-grow-1">
                    <label class="form-label fw-bold">Filtrar por Área</label>
                    <select name="area" class="form-select">
                        <option value="Todas" <%=areaSeleccionada==='Todas' ? 'selected' : '' %>>Todas las áreas
                        </option>
                        <% areas.forEach(a=> { %>
                            <option value="<%= a %>" <%=areaSeleccionada===a ? 'selected' : '' %>><%= a %>
                            </option>
                            <% }) %>
                    </select>
                </div>
                <button type="submit" class="btn btn-success"><i class="bi bi-search"></i> Buscar</button>
            </form>
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <% if (actividades.length===0) { %>
                <div class="alert alert-warning text-center">
                    No se encontraron actividades para el área seleccionada.
                </div>
                <% } else { %>
                    <p class="text-muted">Mostrando <strong>
                            <%= actividades.length %>
                        </strong> resultado(s) para: <span class="badge bg-success">
                            <%= areaSeleccionada %>
                        </span></p>
                    <div class="table-responsive">
                        <table class="table table-hover align-middle">
                            <thead>
                                <tr>
                                    <th>Nombre</th>
                                    <th>Área</th>
                                    <th>Fecha</th>
                                    <th>Lugar</th>
                                    <th>Descripción</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% actividades.forEach(a=> { %>
                                    <tr>
                                        <td><strong>
                                                <%= a.nombre %>
                                            </strong></td>
                                        <td><span class="badge bg-success">
                                                <%= a.area %>
                                            </span></td>
                                        <td>
                                            <%= new Date(a.fecha).toLocaleDateString('es-VE') %>
                                        </td>
                                        <td>
                                            <%= a.lugar %>
                                        </td>
                                        <td class="text-muted small">
                                            <%= a.descripcion %>
                                        </td>
                                    </tr>
                                    <% }) %>
                            </tbody>
                        </table>
                    </div>
                    <% } %>
        </div>
    </div>

    <%- include('../partials/footer') %>