<%- include('../partials/header') %>

    <div class="card shadow-sm mx-auto" style="max-width: 600px;">
        <div class="card-header bg-warning text-dark">
            <h4 class="mb-0"><i class="bi bi-pencil-square"></i> Editar Actividad</h4>
        </div>
        <div class="card-body">
            <form action="/actividades/editar/<%= actividad._id %>" method="POST">

                <div class="mb-3">
                    <label class="form-label fw-bold">Nombre de la Actividad</label>
                    <input type="text" name="nombre" class="form-control" required value="<%= actividad.nombre %>">
                </div>

                <div class="mb-3">
                    <label class="form-label fw-bold">Descripción</label>
                    <textarea name="descripcion" class="form-control" rows="3"
                        required><%= actividad.descripcion %></textarea>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label class="form-label fw-bold">Fecha</label>
                        <input type="date" name="fecha" class="form-control" required
                            value="<%= actividad.fecha ? actividad.fecha.toISOString().split('T')[0] : '' %>">
                    </div>
                    <div class="col-md-6 mb-3">
                        <label class="form-label fw-bold">Área</label>
                        <select name="area" class="form-select" required>
                            <% ['Salud','Educación','Cultura','Deporte','Social'].forEach(a=> { %>
                                <option value="<%= a %>" <%=actividad.area===a ? 'selected' : '' %>><%= a %>
                                </option>
                                <% }) %>
                        </select>
                    </div>
                </div>

                <div class="mb-4">
                    <label class="form-label fw-bold">Lugar</label>
                    <input type="text" name="lugar" class="form-control" required value="<%= actividad.lugar %>">
                </div>

                <div class="d-flex justify-content-between">
                    <a href="/actividades" class="btn btn-secondary">Cancelar y Volver</a>
                    <button type="submit" class="btn btn-warning"><i class="bi bi-floppy-fill"></i> Actualizar
                        Actividad</button>
                </div>
            </form>
        </div>
    </div>

    <%- include('../partials/footer') %>