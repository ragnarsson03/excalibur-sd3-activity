<%- include('../partials/header') %>

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="bi bi-clipboard2-check-fill text-info"></i> Registro de Asistencias</h2>
        <a href="/asistencias/crear" class="btn btn-info text-white"><i class="bi bi-plus-circle-fill"></i> Registrar
            Asistencia</a>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <% if (asistencias.length===0) { %>
                <div class="alert alert-info text-center">Aún no hay asistencias registradas. ¡Añade la primera!</div>
                <% } else { %>
                    <div class="table-responsive">
                        <table class="table table-hover align-middle">
                            <thead>
                                <tr>
                                    <th>Beneficiario</th>
                                    <th>Actividad</th>
                                    <th>Fecha Asistencia</th>
                                    <th>Observación</th>
                                    <th class="text-center">Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% asistencias.forEach(a=> { %>
                                    <tr>
                                        <td>
                                            <% if (a.beneficiario) { %>
                                                <strong>
                                                    <%= a.beneficiario.nombre %>
                                                        <%= a.beneficiario.apellido %>
                                                </strong>
                                                <br><small class="text-muted">
                                                    <%= a.beneficiario.cedula %>
                                                </small>
                                                <% } else { %>
                                                    <span class="text-muted">Sin datos</span>
                                                    <% } %>
                                        </td>
                                        <td>
                                            <% if (a.actividad) { %>
                                                <%= a.actividad.nombre %>
                                                    <br><small class="text-muted">
                                                        <%= new Date(a.actividad.fecha).toLocaleDateString('es-VE') %>
                                                    </small>
                                                    <% } else { %>
                                                        <span class="text-muted">Sin datos</span>
                                                        <% } %>
                                        </td>
                                        <td>
                                            <%= new Date(a.fechaAsistencia).toLocaleDateString('es-VE') %>
                                        </td>
                                        <td class="text-muted small">
                                            <%= a.observacion %>
                                        </td>
                                        <td class="text-center">
                                            <a href="/asistencias/editar/<%= a._id %>"
                                                class="btn btn-sm btn-outline-warning">
                                                <i class="bi bi-pencil-square"></i> Editar
                                            </a>
                                            <form action="/asistencias/eliminar/<%= a._id %>" method="POST"
                                                class="d-inline"
                                                onsubmit="return confirm('¿Eliminar este registro de asistencia?');">
                                                <button type="submit" class="btn btn-sm btn-outline-danger">
                                                    <i class="bi bi-trash3-fill"></i> Eliminar
                                                </button>
                                            </form>
                                        </td>
                                    </tr>
                                    <% }) %>
                            </tbody>
                        </table>
                    </div>
                    <% } %>
        </div>
    </div>

    <%- include('../partials/footer') %>