<%- include('../partials/header') %>

    <div class="mb-8 flex flex-col md:flex-row justify-between items-center gap-4">
        <div>
            <h1 class="text-3xl font-extrabold text-slate-900 flex items-center gap-3">
                <i class="ph-fill ph-clipboard-text text-amber-600 bg-amber-100 p-2 rounded-xl"></i>
                Control de Asistencias
            </h1>
            <p class="text-slate-500 mt-1 ml-[3.25rem]">Registro de participación en actividades.</p>
        </div>
        <div class="flex gap-3">
            <a href="/asistencias/crear"
                class="btn bg-amber-500 text-white hover:bg-amber-600 shadow-lg shadow-amber-500/20">
                <i class="ph ph-plus-circle"></i> Nueva Asistencia
            </a>
        </div>
    </div>

    <div class="card overflow-hidden border border-slate-100">
        <div class="overflow-x-auto">
            <table class="data-table">
                <thead class="bg-amber-50/50 border-b border-amber-100 border-t-0">
                    <tr>
                        <th scope="col" class="text-amber-900 font-bold tracking-wide">Beneficiario</th>
                        <th scope="col" class="text-amber-900 font-bold tracking-wide">Actividad a la que Asistió</th>
                        <th scope="col" class="text-amber-900 font-bold tracking-wide">Fecha de Registro</th>
                        <th scope="col" class="text-amber-900 font-bold tracking-wide">Observaciones</th>
                        <th scope="col" class="text-right text-amber-900 font-bold tracking-wide">Modificar</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-slate-100">
                    <% if (asistencias.length===0) { %>
                        <tr>
                            <td colspan="5" class="py-16 text-center text-slate-500">
                                <div class="flex flex-col items-center justify-center gap-4">
                                    <div
                                        class="w-16 h-16 bg-slate-50 rounded-full flex items-center justify-center border border-slate-100">
                                        <i class="ph-fill ph-list-dashes text-4xl text-slate-300"></i>
                                    </div>
                                    <div>
                                        <p class="text-slate-700 font-semibold mb-1">Sin Registros</p>
                                        <span class="text-sm border-b border-dashed border-slate-300 pb-0.5">Aún no se
                                            ha registrado ninguna asistencia.</span>
                                    </div>
                                    <a href="/asistencias/crear"
                                        class="text-amber-600 font-semibold text-sm hover:underline mt-2">Crear el
                                        primer registro</a>
                                </div>
                            </td>
                        </tr>
                        <% } else { %>
                            <% asistencias.forEach(a=> { %>
                                <tr class="group hover:bg-amber-50/30 transition-colors duration-150">
                                    <!-- Beneficiary info -->
                                    <td class="whitespace-nowrap py-4">
                                        <% if (a.beneficiario) { %>
                                            <div class="flex items-center gap-3">
                                                <div
                                                    class="w-8 h-8 rounded-full bg-slate-100 text-slate-600 flex items-center justify-center text-xs font-bold shrink-0 shadow-inner">
                                                    <%= a.beneficiario.nombre.charAt(0) %>
                                                        <%= a.beneficiario.apellido.charAt(0) %>
                                                </div>
                                                <div>
                                                    <div class="font-bold text-slate-800 text-sm">
                                                        <%= a.beneficiario.nombre %>
                                                            <%= a.beneficiario.apellido %>
                                                    </div>
                                                    <div class="text-xs text-slate-500 font-medium">C.I. <%=
                                                            a.beneficiario.cedula %>
                                                    </div>
                                                </div>
                                            </div>
                                            <% } else { %>
                                                <span class="text-red-500 italic text-sm"><i class="ph ph-warning"></i>
                                                    Beneficiario eliminado</span>
                                                <% } %>
                                    </td>

                                    <!-- Activity info -->
                                    <td class="whitespace-nowrap">
                                        <% if (a.actividad) { %>
                                            <div class="font-medium text-slate-700 text-sm flex items-center gap-2">
                                                <i class="ph-fill ph-calendar-check text-blue-500"></i>
                                                <%= a.actividad.nombre %>
                                            </div>
                                            <% } else { %>
                                                <span class="text-red-500 italic text-sm"><i class="ph ph-warning"></i>
                                                    Actividad eliminada</span>
                                                <% } %>
                                    </td>

                                    <!-- Date info -->
                                    <td class="whitespace-nowrap text-sm text-slate-600 font-medium">
                                        <%= new Date(a.fechaAsistencia).toLocaleDateString() %>
                                    </td>

                                    <!-- Observation -->
                                    <td class="text-sm text-slate-500 max-w-xs truncate" title="<%= a.observacion %>">
                                        <% if(a.observacion && a.observacion !=='Sin observaciones' ) { %>
                                            <span
                                                class="bg-amber-50 text-amber-700 border border-amber-100 px-2 py-0.5 rounded text-xs leading-none mr-1 inline-block"><i
                                                    class="ph-bold ph-info"></i></span>
                                            <%= a.observacion %>
                                                <% } else { %>
                                                    <span class="italic text-slate-400">Sin observaciones</span>
                                                    <% } %>
                                    </td>

                                    <!-- Actions -->
                                    <td class="whitespace-nowrap text-right pr-4">
                                        <div
                                            class="flex justify-end gap-2 opacity-0 group-hover:opacity-100 transition-opacity">
                                            <a href="/asistencias/editar/<%= a._id %>"
                                                class="btn bg-white border border-slate-200 text-slate-500 hover:text-amber-600 hover:border-amber-200 hover:bg-amber-50 !p-1.5 rounded-lg transition-all shadow-sm"
                                                title="Editar">
                                                <i class="ph-fill ph-pencil-simple text-lg leading-none"></i>
                                            </a>
                                            <form action="/asistencias/eliminar/<%= a._id %>" method="POST"
                                                class="inline"
                                                onsubmit="return confirm('¿Seguro que deseas eliminar el registro de asistencia de este beneficiario?');">
                                                <button type="submit"
                                                    class="btn bg-white border border-slate-200 text-slate-500 hover:text-red-600 hover:border-red-200 hover:bg-red-50 !p-1.5 rounded-lg transition-all shadow-sm cursor-pointer"
                                                    title="Eliminar">
                                                    <i class="ph-fill ph-trash text-lg leading-none"></i>
                                                </button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                                <% }) %>
                                    <% } %>
                </tbody>
            </table>
        </div>
    </div>

    <%- include('../partials/footer') %>