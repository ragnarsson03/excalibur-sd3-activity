<%- include('../partials/header') %>

    <div class="max-w-2xl mx-auto">
        <div class="mb-8 flex items-center justify-between">
            <div>
                <a href="/asistencias"
                    class="text-amber-600 hover:text-amber-700 flex items-center gap-2 mb-2 text-sm font-medium w-fit transition-colors">
                    <i class="ph ph-arrow-left"></i> Volver a Asistencias
                </a>
                <h1 class="text-3xl font-extrabold text-slate-900 border-b-4 border-amber-300 pb-2 inline-block">
                    Modificar Registro
                </h1>
            </div>
            <div class="bg-amber-100 text-amber-800 px-3 py-1 rounded-full text-xs font-bold font-mono">
                #<%= asistencia._id.toString().slice(-6) %>
            </div>
        </div>

        <div class="card p-8 border border-amber-100 shadow-card relative overflow-hidden">

            <form action="/asistencias/editar/<%= asistencia._id %>" method="POST" class="space-y-6 relative z-10">

                <div class="bg-white border-2 border-amber-100/60 p-5 rounded-xl space-y-5 shadow-sm">
                    <!-- Beneficiario Select -->
                    <div>
                        <label class="form-label font-bold text-slate-800" for="beneficiario">Beneficiario <span
                                class="text-red-500">*</span></label>
                        <div class="relative">
                            <select id="beneficiario" name="beneficiario"
                                class="form-select border-slate-300 focus:ring-amber-500 focus:border-amber-500 bg-slate-50 pr-10"
                                required>
                                <% beneficiarios.forEach(b=> { %>
                                    <option value="<%= b._id %>" <%=String(asistencia.beneficiario._id ||
                                        asistencia.beneficiario)===String(b._id) ? 'selected' : '' %>>
                                        <%= b.apellido %>, <%= b.nombre %> (CI: <%= b.cedula %>)
                                    </option>
                                    <% }) %>
                            </select>
                            <div
                                class="pointer-events-none absolute inset-y-0 right-0 flex items-center px-4 text-slate-400">
                                <i class="ph-bold ph-caret-down"></i>
                            </div>
                        </div>
                    </div>

                    <!-- Actividad Select -->
                    <div>
                        <label class="form-label font-bold text-slate-800" for="actividad">Actividad <span
                                class="text-red-500">*</span></label>
                        <div class="relative">
                            <select id="actividad" name="actividad"
                                class="form-select border-slate-300 focus:ring-amber-500 focus:border-amber-500 bg-slate-50 pr-10"
                                required>
                                <% actividades.forEach(act=> { %>
                                    <option value="<%= act._id %>" <%=String(asistencia.actividad._id ||
                                        asistencia.actividad)===String(act._id) ? 'selected' : '' %>>
                                        [<%= new Date(act.fecha).toLocaleDateString() %>] <%= act.nombre %>
                                    </option>
                                    <% }) %>
                            </select>
                            <div
                                class="pointer-events-none absolute inset-y-0 right-0 flex items-center px-4 text-slate-400">
                                <i class="ph-bold ph-caret-down"></i>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mt-6">
                    <div class="md:col-span-2">
                        <label class="form-label" for="fechaAsistencia">Fecha de Registro <span
                                class="text-red-500">*</span></label>
                        <div class="relative">
                            <% const isoDate=new Date(asistencia.fechaAsistencia).toISOString().split('T')[0]; %>
                                <input type="date" id="fechaAsistencia" name="fechaAsistencia"
                                    class="form-input focus:ring-amber-500 focus:border-amber-500 w-full" required
                                    value="<%= isoDate %>">
                        </div>
                    </div>
                </div>

                <div>
                    <label class="form-label" for="observacion">Observaciones Adicionales</label>
                    <div class="relative">
                        <textarea id="observacion" name="observacion" rows="3"
                            class="form-input resize-none focus:ring-amber-500 focus:border-amber-500 bg-white"
                            placeholder="Sin observaciones"><%= asistencia.observacion === 'Sin observaciones' ? '' : asistencia.observacion %></textarea>
                    </div>
                </div>

                <div class="pt-6 border-t border-slate-100 flex justify-end gap-3 mt-8">
                    <a href="/asistencias" class="btn btn-outline border-slate-300">Descartar</a>
                    <button type="submit" class="btn bg-amber-500 hover:bg-amber-600 text-white px-8 shadow-md">
                        Guardar Cambios
                    </button>
                </div>
            </form>
        </div>
    </div>

    <%- include('../partials/footer') %>