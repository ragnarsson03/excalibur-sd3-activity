<%- include('../partials/header') %>

    <div class="card shadow-sm mx-auto" style="max-width: 600px;">
        <div class="card-header bg-warning text-dark">
            <h4 class="mb-0"><i class="bi bi-pencil-square"></i> Editar Registro de Asistencia</h4>
        </div>
        <div class="card-body">
            <form action="/asistencias/editar/<%= asistencia._id %>" method="POST">
                <div class="mb-3">
                    <label class="form-label fw-bold">Beneficiario</label>
                    <select name="beneficiario" class="form-select" required>
                        <% beneficiarios.forEach(b=> { %>
                            <option value="<%= b._id %>" <%=String(asistencia.beneficiario)===String(b._id) ? 'selected'
                                : '' %>>
                                <%= b.apellido %>, <%= b.nombre %> — <%= b.cedula %>
                            </option>
                            <% }) %>
                    </select>
                </div>

                <div class="mb-3">
                    <label class="form-label fw-bold">Actividad</label>
                    <select name="actividad" class="form-select" required>
                        <% actividades.forEach(a=> { %>
                            <option value="<%= a._id %>" <%=String(asistencia.actividad)===String(a._id) ? 'selected'
                                : '' %>>
                                <%= a.nombre %> (<%= new Date(a.fecha).toLocaleDateString('es-VE') %>)
                            </option>
                            <% }) %>
                    </select>
                </div>

                <div class="mb-3">
                    <label class="form-label fw-bold">Fecha de Asistencia</label>
                    <input type="date" name="fechaAsistencia" class="form-control"
                        value="<%= asistencia.fechaAsistencia ? asistencia.fechaAsistencia.toISOString().split('T')[0] : '' %>">
                </div>

                <div class="mb-4">
                    <label class="form-label fw-bold">Observación</label>
                    <textarea name="observacion" class="form-control" rows="2"><%= asistencia.observacion %></textarea>
                </div>

                <div class="d-flex justify-content-between">
                    <a href="/asistencias" class="btn btn-secondary">Cancelar y Volver</a>
                    <button type="submit" class="btn btn-warning text-dark"><i class="bi bi-floppy-fill"></i> Actualizar
                        Asistencia</button>
                </div>
            </form>
        </div>
    </div>

    <%- include('../partials/footer') %>