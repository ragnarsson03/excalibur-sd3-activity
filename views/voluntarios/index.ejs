<%- include('../partials/header') %>

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="bi bi-person-badge-fill text-warning"></i> Lista de Voluntarios</h2>
        <a href="/voluntarios/crear" class="btn btn-warning text-dark"><i class="bi bi-plus-circle-fill"></i> Nuevo
            Voluntario</a>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <% if (voluntarios.length===0) { %>
                <div class="alert alert-info text-center">Aún no hay voluntarios registrados. ¡Añade el primero!</div>
                <% } else { %>
                    <div class="table-responsive">
                        <table class="table table-hover align-middle">
                            <thead>
                                <tr>
                                    <th>Cédula</th>
                                    <th>Nombre</th>
                                    <th>Profesión</th>
                                    <th>Disponibilidad</th>
                                    <th>Teléfono</th>
                                    <th class="text-center">Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% voluntarios.forEach(v=> { %>
                                    <tr>
                                        <td>
                                            <%= v.cedula %>
                                        </td>
                                        <td><strong>
                                                <%= v.nombre %>
                                                    <%= v.apellido %>
                                            </strong></td>
                                        <td>
                                            <%= v.profesion %>
                                        </td>
                                        <td><span class="badge bg-warning text-dark">
                                                <%= v.disponibilidad %>
                                            </span></td>
                                        <td>
                                            <%= v.telefono %>
                                        </td>
                                        <td class="text-center">
                                            <a href="/voluntarios/editar/<%= v._id %>"
                                                class="btn btn-sm btn-outline-warning">
                                                <i class="bi bi-pencil-square"></i> Editar
                                            </a>
                                            <form action="/voluntarios/eliminar/<%= v._id %>" method="POST"
                                                class="d-inline"
                                                onsubmit="return confirm('¿Eliminar este voluntario permanentemente?');">
                                                <button type="submit" class="btn btn-sm btn-outline-danger">
                                                    <i class="bi bi-trash3-fill"></i> Eliminar
                                                </button>
                                            </form>
                                        </td>
                                    </tr>
                                    <% }) %>
                            </tbody>
                        </table>
                    </div>
                    <% } %>
        </div>
    </div>

    <%- include('../partials/footer') %>