<%- include('../partials/header') %>

    <div class="max-w-2xl mx-auto">
        <div class="mb-8 flex items-center justify-between">
            <div>
                <a href="/voluntarios"
                    class="text-slate-500 hover:text-brand flex items-center gap-2 mb-2 text-sm font-medium w-fit">
                    <i class="ph ph-arrow-left"></i> Volver al listado
                </a>
                <h1 class="text-3xl font-extrabold text-slate-900">
                    Nuevo Voluntario
                </h1>
            </div>
        </div>

        <div class="card p-8 border border-slate-100 shadow-card">
            <% if (error) { %>
                <div class="form-error bg-red-50 text-red-700 border-l-4 border-red-500 p-4 rounded-r-lg mb-6">
                    <div class="flex gap-2 isolate font-medium items-center">
                        <i class="ph-fill ph-warning-circle text-xl text-red-500"></i>
                        <%= error %>
                    </div>
                </div>
                <% } %>

                    <form action="/voluntarios/crear" method="POST" class="space-y-6">
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                            <div>
                                <label class="form-label" for="nombre">Nombres <span
                                        class="text-red-500">*</span></label>
                                <input type="text" id="nombre" name="nombre" class="form-input focus:ring-brand"
                                    required autofocus value="<%= datos.nombre || '' %>">
                            </div>
                            <div>
                                <label class="form-label" for="apellido">Apellidos <span
                                        class="text-red-500">*</span></label>
                                <input type="text" id="apellido" name="apellido" class="form-input focus:ring-brand"
                                    required value="<%= datos.apellido || '' %>">
                            </div>
                        </div>

                        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                            <div>
                                <label class="form-label" for="cedula">Cédula de Identidad <span
                                        class="text-red-500">*</span></label>
                                <input type="text" id="cedula" name="cedula" class="form-input focus:ring-brand"
                                    required value="<%= datos.cedula || '' %>" placeholder="V-12345678">
                            </div>
                            <div>
                                <label class="form-label" for="telefono">Teléfono <span
                                        class="text-red-500">*</span></label>
                                <div class="relative">
                                    <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                        <i class="ph-fill ph-phone text-slate-400"></i>
                                    </div>
                                    <input type="tel" id="telefono" name="telefono"
                                        class="form-input pl-10 focus:ring-brand" required
                                        value="<%= datos.telefono || '' %>">
                                </div>
                            </div>
                        </div>

                        <div>
                            <label class="form-label" for="profesion">Profesión u Oficio <span
                                    class="text-red-500">*</span></label>
                            <div class="relative">
                                <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                    <i class="ph-fill ph-briefcase text-slate-400"></i>
                                </div>
                                <input type="text" id="profesion" name="profesion"
                                    class="form-input pl-10 focus:ring-brand" required
                                    value="<%= datos.profesion || '' %>" placeholder="Médico, Docente, Estudiante...">
                            </div>
                        </div>

                        <div>
                            <label class="form-label" for="disponibilidad">Disponibilidad de Tiempo <span
                                    class="text-red-500">*</span></label>
                            <div class="relative">
                                <select id="disponibilidad" name="disponibilidad"
                                    class="form-select focus:ring-brand pr-10" required>
                                    <option value="Por evento" <%=datos.disponibilidad==='Por evento' ? 'selected' : ''
                                        %>>Por evento</option>
                                    <option value="Fines de semana" <%=datos.disponibilidad==='Fines de semana'
                                        ? 'selected' : '' %>>Fines de semana</option>
                                    <option value="Días hábiles" <%=datos.disponibilidad==='Días hábiles' ? 'selected'
                                        : '' %>>Días hábiles</option>
                                    <option value="Tiempo completo" <%=datos.disponibilidad==='Tiempo completo'
                                        ? 'selected' : '' %>>Tiempo completo</option>
                                </select>
                                <div
                                    class="pointer-events-none absolute inset-y-0 right-0 flex items-center px-3 text-slate-500">
                                    <i class="ph-bold ph-caret-down"></i>
                                </div>
                            </div>
                        </div>

                        <div class="pt-6 border-t border-slate-100 flex justify-end gap-3">
                            <a href="/voluntarios" class="btn btn-outline">Cancelar</a>
                            <button type="submit" class="btn btn-primary px-8">
                                <i class="ph-bold ph-hand-heart"></i> Registrar
                            </button>
                        </div>
                    </form>
        </div>
    </div>

    <%- include('../partials/footer') %>