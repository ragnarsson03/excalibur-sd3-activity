<%- include('../partials/header') %>

    <div class="max-w-2xl mx-auto">
        <div class="mb-8 flex items-center justify-between">
            <div>
                <a href="/beneficiarios"
                    class="text-slate-500 hover:text-brand flex items-center gap-2 mb-2 text-sm font-medium w-fit">
                    <i class="ph ph-arrow-left"></i> Volver al listado
                </a>
                <h1 class="text-3xl font-extrabold text-slate-900">
                    Nuevo Beneficiario
                </h1>
            </div>
        </div>

        <div class="card p-8 border border-slate-100 shadow-card">
            <% if (error) { %>
                <div class="form-error border-l-4 border-l-red-500">
                    <div class="flex items-center gap-2 font-medium">
                        <i class="ph-fill ph-warning-circle text-lg"></i> Error de registro
                    </div>
                    <p class="mt-1 opacity-90 text-sm">
                        <%= error %>
                    </p>
                </div>
                <% } %>

                    <form action="/beneficiarios/crear" method="POST" class="space-y-6">
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                            <div>
                                <label class="form-label" for="nombre">Nombres <span
                                        class="text-red-500">*</span></label>
                                <input type="text" id="nombre" name="nombre" class="form-input" required autofocus
                                    value="<%= datos.nombre || '' %>" placeholder="Ej. Juan Carlos">
                            </div>
                            <div>
                                <label class="form-label" for="apellido">Apellidos <span
                                        class="text-red-500">*</span></label>
                                <input type="text" id="apellido" name="apellido" class="form-input" required
                                    value="<%= datos.apellido || '' %>" placeholder="Ej. Pérez">
                            </div>
                        </div>

                        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                            <div>
                                <label class="form-label" for="cedula">Cédula de Identidad <span
                                        class="text-red-500">*</span></label>
                                <input type="text" id="cedula" name="cedula" class="form-input" required
                                    value="<%= datos.cedula || '' %>" placeholder="Ej. V-12345678">
                            </div>
                            <div>
                                <label class="form-label" for="telefono">Teléfono <span
                                        class="text-red-500">*</span></label>
                                <input type="tel" id="telefono" name="telefono" class="form-input" required
                                    value="<%= datos.telefono || '' %>" placeholder="Ej. 0414-0000000">
                            </div>
                        </div>

                        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                            <div class="md:col-span-2">
                                <label class="form-label" for="fechaNacimiento">Fecha de Nacimiento <span
                                        class="text-red-500">*</span></label>
                                <input type="date" id="fechaNacimiento" name="fechaNacimiento" class="form-input"
                                    required value="<%= datos.fechaNacimiento || '' %>">
                            </div>
                        </div>

                        <div>
                            <label class="form-label" for="direccion">Dirección de Domicilio <span
                                    class="text-red-500">*</span></label>
                            <textarea id="direccion" name="direccion" rows="3" class="form-input resize-none" required
                                placeholder="Ingresa la dirección exacta..."><%= datos.direccion || '' %></textarea>
                        </div>

                        <div class="pt-6 border-t border-slate-100 flex justify-end gap-3">
                            <a href="/beneficiarios" class="btn btn-outline">Cancelar</a>
                            <button type="submit" class="btn btn-primary px-8">
                                Guardar Beneficiario
                            </button>
                        </div>
                    </form>
        </div>
    </div>

    <%- include('../partials/footer') %>