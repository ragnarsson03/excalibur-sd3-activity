<%- include('../partials/header') %>

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="bi bi-search text-primary"></i> Consulta de Beneficiarios</h2>
        <a href="/beneficiarios" class="btn btn-outline-secondary"><i class="bi bi-arrow-left"></i> Volver</a>
    </div>

    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <form action="/beneficiarios/consulta" method="GET" class="d-flex gap-2 align-items-end">
                <div class="flex-grow-1">
                    <label class="form-label fw-bold">Buscar por nombre, apellido o cédula</label>
                    <input type="text" name="q" class="form-control" placeholder="Ej: Juan Pérez o V-12345678"
                        value="<%= q %>">
                </div>
                <button type="submit" class="btn btn-primary"><i class="bi bi-search"></i> Buscar</button>
                <a href="/beneficiarios/consulta" class="btn btn-outline-secondary">Limpiar</a>
            </form>
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <% if (beneficiarios.length===0) { %>
                <div class="alert alert-warning text-center">
                    No se encontraron beneficiarios con ese criterio de búsqueda.
                </div>
                <% } else { %>
                    <p class="text-muted">Mostrando <strong>
                            <%= beneficiarios.length %>
                        </strong> resultado(s)
                        <% if (q) { %> para: "<strong>
                                <%= q %>
                            </strong>"<% } %>
                    </p>
                    <div class="table-responsive">
                        <table class="table table-hover align-middle">
                            <thead>
                                <tr>
                                    <th>Cédula</th>
                                    <th>Nombre Completo</th>
                                    <th>Teléfono</th>
                                    <th>Dirección</th>
                                    <th class="text-center">Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% beneficiarios.forEach(b=> { %>
                                    <tr>
                                        <td><code><%= b.cedula %></code></td>
                                        <td><strong>
                                                <%= b.nombre %>
                                                    <%= b.apellido %>
                                            </strong></td>
                                        <td>
                                            <%= b.telefono %>
                                        </td>
                                        <td class="text-muted small">
                                            <%= b.direccion %>
                                        </td>
                                        <td class="text-center">
                                            <a href="/beneficiarios/editar/<%= b._id %>"
                                                class="btn btn-sm btn-outline-warning">
                                                <i class="bi bi-pencil-square"></i> Editar
                                            </a>
                                        </td>
                                    </tr>
                                    <% }) %>
                            </tbody>
                        </table>
                    </div>
                    <% } %>
        </div>
    </div>

    <%- include('../partials/footer') %>