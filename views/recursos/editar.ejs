<%- include('../partials/header') %>

    <div class="max-w-2xl mx-auto">
        <div class="mb-8 flex items-center justify-between">
            <div>
                <a href="/recursos"
                    class="text-slate-500 hover:text-emerald-600 flex items-center gap-2 mb-2 text-sm font-medium w-fit transition-colors">
                    <i class="ph ph-arrow-left"></i> Ver Inventario
                </a>
                <h1 class="text-3xl font-extrabold text-slate-900">
                    Actualizar Recurso
                </h1>
            </div>
            <div
                class="bg-emerald-50 text-emerald-700 px-3 py-1 rounded-full text-xs font-bold border border-emerald-100 uppercase tracking-wide">
                SKU-<%= recurso._id.toString().slice(-6) %>
            </div>
        </div>

        <div class="card p-8 border border-slate-100 shadow-card bg-emerald-50/10">
            <form action="/recursos/editar/<%= recurso._id %>" method="POST" class="space-y-6">
                <div>
                    <label class="form-label" for="nombre">Nombre del Insumo / Material <span
                            class="text-red-500">*</span></label>
                    <div class="relative">
                        <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                            <i class="ph-fill ph-tag text-emerald-600/50"></i>
                        </div>
                        <input type="text" id="nombre" name="nombre"
                            class="form-input pl-10 focus:ring-emerald-500 focus:border-emerald-500" required
                            value="<%= recurso.nombre %>">
                    </div>
                </div>

                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <div>
                        <label class="form-label" for="tipo">Categor√≠a de Recurso <span
                                class="text-red-500">*</span></label>
                        <div class="relative">
                            <select id="tipo" name="tipo"
                                class="form-select focus:ring-emerald-500 focus:border-emerald-500 pr-10" required>
                                <option value="Alimentos" <%=recurso.tipo==='Alimentos' ? 'selected' : '' %>>Alimentos
                                </option>
                                <option value="Medicina" <%=recurso.tipo==='Medicina' ? 'selected' : '' %>>Medicina
                                </option>
                                <option value="Material Educativo" <%=recurso.tipo==='Material Educativo' ? 'selected'
                                    : '' %>>Material Educativo</option>
                                <option value="Equipos" <%=recurso.tipo==='Equipos' ? 'selected' : '' %>>Equipos
                                </option>
                                <option value="Otros" <%=recurso.tipo==='Otros' ? 'selected' : '' %>>Otros</option>
                            </select>
                            <div
                                class="pointer-events-none absolute inset-y-0 right-0 flex items-center px-3 text-slate-500">
                                <i class="ph-bold ph-caret-down"></i>
                            </div>
                        </div>
                    </div>
                    <div>
                        <label
                            class="form-label border-b border-dashed border-slate-300 pb-1 mb-2 inline-block cursor-help"
                            title="Cantidad disponible en inventario" for="cantidad">Cantidad / Unidades <span
                                class="text-red-500">*</span></label>
                        <div class="relative">
                            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                <i class="ph-fill ph-hash text-emerald-600/50"></i>
                            </div>
                            <input type="number" id="cantidad" name="cantidad" min="0"
                                class="form-input pl-10 focus:ring-emerald-500 focus:border-emerald-500 text-lg font-semibold"
                                required value="<%= recurso.cantidad %>">
                        </div>
                    </div>
                </div>

                <div>
                    <label class="form-label" for="estado">Estado Actual <span class="text-red-500">*</span></label>

                    <div class="grid grid-cols-3 gap-4 mt-2">
                        <label class="cursor-pointer relative">
                            <input type="radio" name="estado" value="Disponible" class="peer sr-only" required
                                <%=recurso.estado==='Disponible' ? 'checked' : '' %>>
                            <div
                                class="p-4 rounded-xl border-2 border-slate-200 bg-white hover:bg-slate-50 peer-checked:border-emerald-500 peer-checked:bg-emerald-50 transition-all text-center">
                                <i class="ph-fill ph-check-circle text-emerald-500 text-2xl mb-1"></i>
                                <div class="font-semibold text-slate-700 text-sm">Disponible</div>
                            </div>
                        </label>

                        <label class="cursor-pointer relative">
                            <input type="radio" name="estado" value="En uso" class="peer sr-only" required
                                <%=recurso.estado==='En uso' ? 'checked' : '' %>>
                            <div
                                class="p-4 rounded-xl border-2 border-slate-200 bg-white hover:bg-slate-50 peer-checked:border-blue-500 peer-checked:bg-blue-50 transition-all text-center">
                                <i class="ph-fill ph-spinner-gap text-blue-500 text-2xl mb-1"></i>
                                <div class="font-semibold text-slate-700 text-sm">En uso</div>
                            </div>
                        </label>

                        <label class="cursor-pointer relative">
                            <input type="radio" name="estado" value="Agotado" class="peer sr-only" required
                                <%=recurso.estado==='Agotado' ? 'checked' : '' %>>
                            <div
                                class="p-4 rounded-xl border-2 border-slate-200 bg-white hover:bg-slate-50 peer-checked:border-red-500 peer-checked:bg-red-50 transition-all text-center">
                                <i class="ph-fill ph-x-circle text-red-500 text-2xl mb-1"></i>
                                <div class="font-semibold text-slate-700 text-sm">Agotado</div>
                            </div>
                        </label>
                    </div>
                </div>

                <div class="pt-6 border-t border-emerald-100 flex justify-end gap-3 mt-8">
                    <a href="/recursos" class="btn btn-outline border-slate-300 bg-white">Cancelar</a>
                    <button type="submit"
                        class="btn bg-emerald-600 hover:bg-emerald-700 text-white px-8 shadow-md shadow-emerald-200">
                        Guardar Cambios
                    </button>
                </div>
            </form>
        </div>
    </div>

    <%- include('../partials/footer') %>