<%- include('../partials/header') %>

    <div class="card shadow-sm mx-auto" style="max-width: 560px;">
        <div class="card-header bg-warning text-dark">
            <h4 class="mb-0"><i class="bi bi-pencil-square"></i> Editar Recurso</h4>
        </div>
        <div class="card-body">
            <form action="/recursos/editar/<%= recurso._id %>" method="POST">
                <div class="mb-3">
                    <label class="form-label fw-bold">Nombre del Recurso</label>
                    <input type="text" name="nombre" class="form-control" required value="<%= recurso.nombre %>">
                </div>
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label class="form-label fw-bold">Tipo</label>
                        <select name="tipo" class="form-select" required>
                            <% ['Alimentos','Medicina','Material Educativo','Equipos','Otros'].forEach(t=> { %>
                                <option value="<%= t %>" <%=recurso.tipo===t ? 'selected' : '' %>><%= t %>
                                </option>
                                <% }) %>
                        </select>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label class="form-label fw-bold">Cantidad</label>
                        <input type="number" name="cantidad" class="form-control" required min="0"
                            value="<%= recurso.cantidad %>">
                    </div>
                </div>
                <div class="mb-4">
                    <label class="form-label fw-bold">Estado</label>
                    <select name="estado" class="form-select">
                        <% ['Disponible','Agotado','En uso'].forEach(e=> { %>
                            <option value="<%= e %>" <%=recurso.estado===e ? 'selected' : '' %>><%= e %>
                            </option>
                            <% }) %>
                    </select>
                </div>
                <div class="d-flex justify-content-between">
                    <a href="/recursos" class="btn btn-secondary">Cancelar y Volver</a>
                    <button type="submit" class="btn btn-warning text-dark"><i class="bi bi-floppy-fill"></i> Actualizar
                        Recurso</button>
                </div>
            </form>
        </div>
    </div>

    <%- include('../partials/footer') %>